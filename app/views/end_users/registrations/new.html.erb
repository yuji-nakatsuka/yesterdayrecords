<div class="container center">

<h2>アカウントの作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


   <label>名前　姓</label>
            <%= f.text_field :first_name,placeholder:"田中"%>

   <label>名前　名</label>
            <%= f.text_field :last_name,placeholder:"太郎"%><br>

   <label>名前　カナ姓</label>
            <%= f.text_field :kana_last,placeholder:"タナカ"%>

   <label>名前　カナ名</label>
            <%= f.text_field :kana_first,placeholder:"タロウ"%><br>

   <label>郵便番号</label><span>ハイフン無し</span>
            <%= f.text_field :zip,placeholder:"0000000"%><br>

   <label>住所</label>
            <%= f.text_field :address,placeholder:"大阪府大阪市"%><br>

   <label>電話番号</label>
            <%= f.text_field :phone_number,placeholder:"0000000000"%><br>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "パスワード" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "もう一度パスワードを追加してください" %>
  </div>

  <div class="actions">
    <%= f.submit "アカウントを作成" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>

</div>

