<%= render "layouts/admin_header"%>

<div class="container">

<div class="main">

  <h1>アカウント情報の変更</h1>

  <div class="form">
    <%= form_for(@end_user) do |f| %>
            <label>名前　姓</label>
            <%= f.text_field :last_name,placeholder:"田中"%>

            <label>名前　名</label>
            <%= f.text_field :last_name,placeholder:"太郎"%>

            <label>名前　カナ姓</label>
            <%= f.text_field :kana_last,placeholder:"タナカ"%>

            <label>名前　カナ名</label>
            <%= f.text_field :kana_first,placeholder:"タロウ"%>

            <label>郵便番号</label><span>ハイフン無し</span>
            <%= f.text_field :zip,placeholder:"0000000"%>

            <label>住所</label>
            <%= f.text_field :address,placeholder:"大阪府大阪市"%>

            <label>電話番号</label>
            <%= f.text_field :phone_number,placeholder:"0000000000"%>

            <label>メールアドレス</label>
            <%= f.text_field :email,placeholder:"a@a"%>

            <label>配送先の住所</label>
            <%= f.text_field :delivery_address,placeholder:"大阪府堺市"%>

        <!-- ここに追加 -->
        <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>

  </div>

  </div>

</div>
