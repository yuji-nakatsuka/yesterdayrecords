<div class="nested-fields">

	<div class="disc">
		<%= f.label "number" %>
		<%= f.text_field :number %>
		<%= f.label "disc" %>
		<%= f.text_field :disc %>
		<%= link_to_remove_association "remove disc", f %>
	</div>

	<div class="songs">
		<%= f.fields_for :songs do |d| %>
			<%= render "song_fields", f: d %>
		<%end%>

		<div class="links">
			<%= link_to_add_association "add song", f, :songs%>
		</div>
	</div>

</div>