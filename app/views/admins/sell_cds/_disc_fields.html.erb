<div class="bg-container">

<div class="nested-fields">
<div class="nested-fields-disc">
	<div class="disc">
		<%= f.label "disc" %><br>
		<%= f.text_field :number %>
		<%= f.text_field :disc %>
		<%= link_to_remove_association "remove disc", f %><br>
		<%= f.label "song"%>

	</div>

	<div class="songs">

		<%= f.fields_for :songs do |d| %>
			<%= render "song_fields", f: d %>
		<%end%>

		<div class="links">
			<%= link_to_add_association "add song", f, :songs%>
		</div>

	</div>
</div>

</div>

</div>
