<%= render "layouts/admin_header"%>

<div class="container">

  <div class="sell_cd_show_all">

  <div class="image-top-infos clearfix">
    <div class="cd-image">
       <%= attachment_image_tag @sell_cd, :image, size: "50*50",format: 'jpg'  %>
    </div>

    <div class="top-infos">

      <div class="title-group">
        <h2><%= @sell_cd.title %></h2>
        <p class="genre-name"><%= @sell_cd.genre.genre %></p>
        <h2><%= @sell_cd.artist.artist %></h2>
        
      </div>


      <table class="order-info">
        <tr>
          <td>価格</td>
          <td>在庫数</td>
          <td>status</td>
        </tr>

        <tr>
          <td><%= @sell_cd.value %>円</td>
          <td><%= @sell_cd.stock %></td>
          <td><%= enum(@sell_cd.sell_status) %></td>
        </tr>

        <tr>
          <td colspan="3"><%= link_to  admins_sell_cds_main_edit_path(@sell_cd) ,class:"btn btn-primary btn-lg btn-block" do%>商品編集<%end%></td>
        </tr>

      </table>
      </div>
    </div>

      <% @sell_cd.discs.each do |disc| %>
       <div class="disc-infos">
         <p><%= disc.disc %></p>
         <% disc.songs.order(number: "ASC").each do |song| %>
         <table class="disc-info">
           <tr>
             <td><%= song.number %></td>
             <td><%= song.song %></td>
           </tr>
         </table>
         <% end %>
       </div>
     <% end %>


  </div>



  </div>

</div>
