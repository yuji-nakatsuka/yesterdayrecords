<div class="main clearfix">
<%= render "layouts/end_header"%>
<%= render "layouts/sidebar" ,genres: @genres%>

  <div class="main col-xs-9">

    <% if @search_word.empty? %>
    <h2>全ての商品</h2>
    <% else %>
    <h2><%= @search_word %>での検索結果</h2>
    <% end %>

    <div class="new-arivval-boxes">
      <% @sell_cds.each do |sell_cd| %>
        <div class="new-arivval-box">
        <table>
          <tr><td colspan="2"><%= attachment_image_tag sell_cd, :image, :fill, 100, 100,format: 'jpg'  %></td></tr>
          <tr><td colspan="2"><%= link_to sell_cd_path(sell_cd.id) do %><%= sell_cd.title %><%end%></td></tr>
          <tr><td colspan="2"><%= sell_cd.artist.artist %></td></tr>
          <tr><td><%= sell_cd.value %>円</td><td><%= enum(sell_cd.sell_status) %></td></tr>
          </table>

          </div>
        <% end %>


    <%= paginate @sell_cds %>
  </div>
  </div>
</div>
