<% total_value = 0 %>
<% total_cd = 0%>
<div class="carts-index clearfix">
	<div class="carts-index-title">
		<h1>カート内商品一覧</h1>
	</div>
	<div class="carts-index-boxes">
		<% @carts.each do |cart| %>
			<div class="carts-index-box">
				<table>
					<tr>
						<td rowspan="4"><img></td>
						<td colspan="1"><h3 class="carts-index-box-title"><%=cart.sell_cd.title%></h3></td>
					</tr>
					<tr>
						<td colspan="2">
							<%=sell_cd.artist.artist%>
						</td>
						<td></td>
					</tr>
					<tr>
						<td>genre : <%=cart.sell_cd.genre.genre%></td>
						<td class="cart-index-box-order-item">数量</td>
						<td class="cart-index-box-order-item"><%=cart.quantity%></td>
					</tr>
					<tr>
						<td>label : <%=cart.sell_cd.label.label%></td>
						<td class="cart-index-box-order-item"></td>
						<td class="cart-index-box-order-item"><%=link_to%>カートから削除<%=%></td>
					</tr>
					<tr>
						<td></td>
						<td class="cart-index-box-order-item"><%=%>status<%=%></td>
						<td class="cart-index-box-order-item">価格 : ¥<%=cart.sell_cd.value%></td>
					</tr>
				</table>
			</div>
			<% total_value += cart.sell_cd.value %>
			<% total_cd += cart.quantity %>
		<%end%>
	</div>
	<div class="carts-index-value">
		<table>
			<tr>
				<td class="carts-index-value-title">合計枚数</td><td class="carts-index-value-total"><%=total_cd%></td>
			</tr>
				<td class="carts-index-value-title">小計</td><td class="carts-index-value-total"><%=total_value%></td>
			<tr>
				<td class="carts-index-value-title">消費税</td><td class="carts-index-value-total"><%=total_value*sales_tax_rate%></td>
			</tr>
			<tr  class="carts-index-value-last">
				<td class="carts-index-value-title">合計</td><td class="carts-index-value-total">¥</td>
			</tr>
		</table>
	</div>
</div>
